{
  "manifest_version":2,
  "name":"happyAnno",
  "version": "1.0",
  "description":"An annotation extension for SWE 578 class!",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16":"icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "jquery-3.4.1.min.js",
      "eventPage.js"
    ],
    "persistent":false
  },  
  "permissions": [
    "tabs",
    "contextMenus",
    "https://happy-annotation-server.herokuapp.com/*",
    "http://127.0.0.1:5500/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://127.0.0.1:5500/test.html"],
      "js": ["jquery-3.4.1.min.js","jquery.highlight.js","highlight.js"],
      "css": ["highlight.css"]
    }
  ]
}